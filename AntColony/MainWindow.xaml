<Window x:Class="AntColony.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntColony"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="SingleBorderWindow" WindowState="Maximized">
    <Grid ShowGridLines="True" Width="500" Height="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="counterOfIteration" Grid.Row="2" Grid.Column="0" Content="проход"></Label>
        <Button Grid.Column="0"  Grid.Row="0" Content="дать еды"></Button>
        <Button Grid.Column="0"  Grid.Row="1"  Content="запустить враговдать еды"></Button>
        <Canvas x:Name="antField" Grid.Column="1"  Grid.RowSpan="2" Background="Green">
            <Ellipse Name="antHill" Width="20" Height="20" Fill="SaddleBrown" Canvas.Left="20" Canvas.Top="20" ></Ellipse>
        </Canvas>
    </Grid>
</Window>
